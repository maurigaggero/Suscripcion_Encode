<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Suscripcion Revista Encode</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Inicio
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Registrar-Suscripcion" Match="NavLinkMatch.All">
                <span class="oi oi-plus" aria-hidden="true"></span> Registrar Suscripción
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Registrar-Suscriptor" Match="NavLinkMatch.All">
                <span class="oi oi-person" aria-hidden="true"></span> Registrar Suscriptor
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Modificar-Suscriptor" Match="NavLinkMatch.All">
                <span class="oi oi-pencil" aria-hidden="true"></span> Modificar Suscriptor
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
